<%- include ('_header')%>
<%- include ('_navbar')%>
<body>
  <div class="container" role="main">
    <br><br>
    <!--TODO: Make alert with validation if user submits invalid entry-->
    <form action="/process" method="POST">
      <div class="form-group">
        <h4><%= message %></h4>
        <label for="txtName" class="form-check-label">First and Last Name: </label>
        <input type="text" id="txtName" class="form-control" placeholder="John Doe" name="txtName">
      </div>
      <div class="form-group" style="overflow: hidden;">
        <input name="_csrf" value="<%= csrfToken %>" type="hidden">
        <a href="/" class="btn btn-primary">Cancel</a>
        <button type="submit" class="btn btn-primary float-right">Submit</button>
      </div>
    </form>
  </div>
</body>

