<%- include('_header') %>
<%- include('_navbar') %>
<body>
  <div class="container" role="main">
    <div style="max-width: fit-content;margin: auto;">
      <% if(employees.length) {%>
        <table class="table table-striped table-dark table-hover mt-5">
          <thead>
            <th>First Name</th>
            <th>Last Name</th>
          </thead>
          <tbody>
            <% employees.forEach(function(employee) { %>
              <tr>
                <td><%= employee.firstName %></td>
                <td><%= employee.lastName %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else {%>
        <h1 class="alert alert-danger" role="alert">No employees to show at this time.</h1>
      <% } %>
      <a href="/" class="btn btn-primary">Go Back</a>
    </div>
  </div>
</body>

<%- include('_footer') %>
<%- include('_scripts') %>
